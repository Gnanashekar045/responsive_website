<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple E-commerce</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .product {
            border: 1px solid #ccc;
            padding: 10px;
            margin: 20px;
            display: inline-block;
        }
        .cart {
            margin-top: 20px;
            border: 1px solid #000;
            padding: 10px;
        }
        .cart-item {
            border-bottom: 1px solid #ddd;
            padding: 5px 0;
        }
        .total {
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <h1>Simple E-commerce Store</h1>

    <div class="products">
        <div class="product" data-id="1" data-name="Laptop" data-price="1000">
            <h2>Laptop</h2>
            <p>Price: $1000</p>
            <button onclick="addToCart(1)">Add to Cart</button>
        </div>
        <div class="product" data-id="2" data-name="Phone" data-price="500">
            <h2>Phone</h2>
            <p>Price: $500</p>
            <button onclick="addToCart(2)">Add to Cart</button>
        </div>
        <div class="product" data-id="3" data-name="Tablet" data-price="300">
            <h2>Tablet</h2>
            <p>Price: $300</p>
            <button onclick="addToCart(3)">Add to Cart</button>
        </div>
    </div>

    <div class="cart">
        <h3>Your Cart</h3>
        <div id="cart-items"></div>
        <div class="total">
            Total: $<span id="total-price">0</span>
        </div>
    </div>

    <script>
        const products = [
            { id: 1, name: 'Laptop', price: 1000 },
            { id: 2, name: 'Phone', price: 500 },
            { id: 3, name: 'Tablet', price: 300 }
        ];

        const cart = [];

        function addToCart(productId) {
            const product = products.find(item => item.id === productId);
            cart.push(product);
            updateCart();
        }

        function updateCart() {
            const cartItems = document.getElementById('cart-items');
            cartItems.innerHTML = '';

            let totalPrice = 0;

            cart.forEach((item, index) => {
                const cartItem = document.createElement('div');
                cartItem.classList.add('cart-item');
                cartItem.innerHTML = `${item.name} - $${item.price} <button onclick="removeFromCart(${index})">Remove</button>`;
                cartItems.appendChild(cartItem);

                totalPrice += item.price;
            });

            document.getElementById('total-price').textContent = totalPrice;
        }

        function removeFromCart(index) {
            cart.splice(index, 1);
            updateCart();
        }
    </script>

</body>
</html>
